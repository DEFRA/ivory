user  nginx;

events {
    worker_connections   1000;
}
http {
    server {
        listen 4000;
        location / {
            proxy_pass http://ivory_front_office:3000;
        }
    }
    server {
        listen 4020;
        location / {
            proxy_pass http://ivory_back_office:3020;
        }
    }
}